# Smart Slip Analytics Engine - Environment Configuration
# Copy to .env and fill with your actual values

# API Keys
NBA_API_KEY=your_nba_api_key
ODDS_API_KEY=your_odds_api_key
FOOTBALL_API_KEY=your_football_api_key
TENNIS_API_KEY=your_tennis_api_key
NHL_API_KEY=your_nhl_api_key

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/smartslip

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=production
DEBUG=False

# Logging
LOG_LEVEL=INFO

# API Rate Limiting
API_TIMEOUT=10
API_MAX_RETRIES=3

# Monitoring
PROMETHEUS_PORT=8001
